{% extends 'base.html.twig' %}

{% block indexBody %}
    <div id="wrapper">
        <div id="container">
            <form class="col-md-offset-3 col-md-6" role="search" method="GET" name="search" action="/">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" name="box">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
            <div class="col-md-6 col-md-offset-3">
                {{ search }}
            </div>
            {% for tweet in tweets %}
                <div class="col-md-offset-2 col-md-8 boxTweet">
                    <h2>{{ tweet.user.screen_name }}</h2>
                    <p>{{ tweet.text }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
