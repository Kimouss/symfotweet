{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tweets</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tweet.id }}</td>
            </tr>
            <tr>
                <th>Usertweet</th>
                <td>{{ tweet.userTweet }}</td>
            </tr>
            <tr>
                <th>Tweet</th>
                <td>{{ tweet.tweet }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ tweet.date }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tweets_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
