{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    {% if userTwitter is defined %}
        <div class="container">
            <div class="row">
                <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
                    <div class="well profile">
                        <div class="col-sm-12">
                            <div class="col-xs-12 col-sm-8">
                                <h2>{{ user.username }}</h2>
                                <p><strong>Twitter name: </strong> <a href="https://twitter.com/{{ userTwitter.screen_name }}">@{{ userTwitter.screen_name }}</a></p>
                                <p><strong>Description: </strong> {{ userTwitter.description }} </p>
                                <p><string>{{ 'profile.show.email'|trans }}:</string>{{ user.email }}</p>
                            </div>
                            <div class="col-xs-12 col-sm-4 text-center">
                                <figure>
                                    <img src="{{ userTwitter.profile_image_url }}" alt="Profil image" class="img-circle img-responsive">
                                </figure>
                            </div>
                        </div>
                        <div class="col-xs-12 divider text-center">
                            <div class="col-xs-12 col-sm-4 emphasis">
                                <h2><strong> {{ userTwitter.friends_count }} </strong></h2>
                                <p><small>Followers</small></p>
                            </div>
                            <div class="col-xs-12 col-sm-4 emphasis">
                                <h2><strong>{{ userTwitter.followers_count }}</strong></h2>
                                <p><small>Following</small></p>
                            </div>
                            <div class="col-xs-12 col-sm-4 emphasis">
                                <h2><strong>{{ userTwitter.statuses_count }}</strong></h2>
                                <p><small>Tweets</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container">
            <div class="row">
                <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
                    <div class="well profile">
                        <div class="col-sm-12">
                            <div class="col-xs-12 col-sm-8">
                                <h2>{{ user.username }}</h2>
                                <p><string>{{ 'profile.show.email'|trans }}:</string>{{ user.email }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if url is defined %}
        <a href="{{ url }}" class="btn btn-primary">Lier au compte Twitter</a>
    {% endif %}
</div>
